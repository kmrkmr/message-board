<%# 部分テンプレート %>

<%= form_for(@message) do |f| %>
<!-- エラーメッセージの表示 -->
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>


<form>
  <div class="form-group">
    <label for="message_age">年齢</label>
    <input type="integer" name="message[age]" class="form-control" id="message_age" placeholder="年齢">
  </div>
  <div class="form-group">
    <label for="message_name">名前</label>
    <input type="text" name="message[name]" class="form-control" id="message_name" placeholder="名前">
  </div>
  <div class="form-group">
    <label for="message_body">内容</label>
    <textarea type="text"  name="message[body]" class="form-control" id="message_body" placeholder="内容"></textarea>
  </div>
  <button type="submit" class="btn btn-default">送信</button>
</form>
<% end %>
